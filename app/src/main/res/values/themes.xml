<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NumiGoo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/background_color</item>
    </style>

    <style name="Theme.NumiGoo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Font family -->
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <!-- Text style -->
        <item name="android:textStyle">bold</item>
        <!-- Default text appearances -->
        <item name="android:textViewStyle">@style/Widget.NumiGoo.TextView</item>
        <item name="buttonStyle">@style/Widget.NumiGoo.Button</item>
    </style>

    <!-- TextView için özel stil -->
    <style name="Widget.NumiGoo.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button için özel stil -->
    <style name="Widget.NumiGoo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>