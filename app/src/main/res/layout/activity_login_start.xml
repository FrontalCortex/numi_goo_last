<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="24dp">

    <!-- ÜST REFERANS (%22) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <!-- ÜST BAŞLIK -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabın mı var?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dark_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PRIMARY BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="@string/login_start_primary_button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/dark_primary"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ALT GRUP BAŞLANGICI -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"
        android:layout_height="0dp" android:layout_width="0dp"
        />

    <!-- DIVIDER (ARTIK REFERANS DEĞİL) -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="@id/guidelineBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        android:layout_height="0dp" android:layout_width="0dp"
         />
    <!-- ALT METİN -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numigo'ya ilk defa mı giriyorsun?"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/dark_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/guidelineBottom2"
        app:layout_constraintBottom_toTopOf="@id/btnSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- SECONDARY BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecondary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="@string/login_start_secondary_button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_primary"
        app:cornerRadius="28dp"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/dark_primary"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEACHER MODE -->
    <TextView
        android:id="@+id/btnTeacherMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_start_teacher_mode_button"
        android:textColor="@color/dark_text_secondary"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

