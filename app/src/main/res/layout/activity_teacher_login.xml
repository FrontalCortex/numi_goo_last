<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_education_logo"
            android:background="@drawable/circle_background" />

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Eğitim Uygulaması"
            android:textColor="@color/dark_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Alt başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Öğretmen Girişi"
            android:textColor="@color/dark_text_secondary"
            android:textSize="16sp" />

        <!-- Giriş Formu -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-posta"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Şifre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Şifre"
                        android:inputType="textPassword"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Giriş Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Giriş Yap"
                    android:textSize="16sp"
                    app:backgroundTint="@color/dark_primary"
                    app:cornerRadius="28dp" />

                <!-- Öğrenci Girişi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStudentLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Öğrenci Girişi"
                    android:textColor="@color/dark_primary"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/dark_primary"
                    app:strokeWidth="2dp" />

                <!-- Kayıt Ol -->
                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="Hesabın yok mu? Kayıt Ol"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
