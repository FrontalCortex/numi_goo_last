<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_education_logo"
            android:background="@drawable/circle_background" />

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Eğitim Uygulaması"
            android:textColor="@color/dark_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Alt başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Öğrenci Girişi"
            android:textColor="@color/dark_text_secondary"
            android:textSize="16sp" />

        <!-- Giriş Formu -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Giriş Butonu - Google hesap seçimi ile başlar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Giriş Yap"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="12dp"
                    app:backgroundTint="@color/dark_primary"
                    app:cornerRadius="28dp" />

                <!-- Öğretmen Girişi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTeacherLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Öğretmen Girişi"
                    android:textColor="@color/dark_primary"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/dark_primary"
                    app:strokeWidth="2dp" />

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/dark_text_secondary" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="veya"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="14sp" />
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/dark_text_secondary" />
                </LinearLayout>

                <!-- Google Sign-In Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogleSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Google ile Giriş Yap"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="12dp"
                    android:textColor="#453535"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="28dp"
                    app:strokeColor="@color/dark_text_secondary"
                    app:strokeWidth="1dp" />

                <!-- Kayıt Ol -->
                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="Hesabın yok mu? Kayıt Ol"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
