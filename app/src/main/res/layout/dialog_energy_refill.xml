<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enerji Yenileme"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFD600"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:src="@drawable/energy_ic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Energy" />

        <TextView
            android:id="@+id/currentEnergyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/timeUntilNextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bir sonraki enerji: 4:30"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ä°ptal"
            android:textColor="#FFFFFF"
            android:background="@drawable/cancel_button_background"
            android:padding="12dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/watchAdButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“º Reklam Ä°zle"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

</LinearLayout> 