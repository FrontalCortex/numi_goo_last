<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CupFragment"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:text="0:00"
            android:layout_gravity="center"
            android:layout_marginTop="200dp" />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/cupContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="0"
            android:visibility="invisible"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/cupNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:layout_marginBottom="50dp"
                android:text="Harika Kupa" />


            <ImageView
                android:id="@+id/cupImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cup_ic"
                android:contentDescription="Kupa" />


            <TextView
                android:id="@+id/motivationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Harika bir iş çıkardın! Seninle gurur duyuyoruz!" />

            <Button
                android:id="@+id/claimButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="#8CC63F"
                android:text="Devam et"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>




</FrameLayout>