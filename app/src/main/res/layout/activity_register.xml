<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_education_logo"
            android:background="@drawable/circle_background" />

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Hesap Oluştur"
            android:textColor="@color/dark_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Alt başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Eğitim yolculuğuna başla"
            android:textColor="@color/dark_text_secondary"
            android:textSize="16sp" />

        <!-- Kayıt Formu -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Kullanıcı Tipi Seçimi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Kullanıcı Tipi"
                    android:textColor="@color/dark_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbStudent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Öğrenci"
                        android:textColor="@color/dark_text" />

                    <RadioButton
                        android:id="@+id/rbTeacher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Öğretmen"
                        android:textColor="@color/dark_text" />

                </RadioGroup>

                <!-- İsim -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ad Soyad"
                        android:inputType="textPersonName"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-posta"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Şifre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Şifre"
                        android:inputType="textPassword"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Onay Kodu (Sadece Öğretmen için) -->
                <TextView
                    android:id="@+id/tvApprovalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Onay Kodu"
                    android:textColor="@color/dark_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilApprovalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"
                    app:boxBackgroundColor="@color/dark_surface"
                    app:hintTextColor="@color/dark_text_secondary"
                    app:startIconTint="@color/dark_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApprovalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Onay kodu girin"
                        android:inputType="text"
                        android:textColor="@color/dark_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Öğretmen Onay Kodu İste Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestCode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:text="Kod iste"
                    android:visibility="gone"
                    app:backgroundTint="@color/dark_primary"
                    app:cornerRadius="24dp" />

                <!-- Kayıt Ol Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Kayıt Ol"
                    android:textSize="16sp"
                    app:backgroundTint="@color/dark_primary"
                    app:cornerRadius="28dp" />

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/dark_text_secondary" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="veya"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="14sp" />
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/dark_text_secondary" />
                </LinearLayout>

                <!-- Google Sign-In Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogleSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Google ile Kayıt Ol"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="12dp"
                    android:textColor="#453535"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="28dp"
                    app:strokeColor="@color/dark_text_secondary"
                    app:strokeWidth="1dp" />

                <!-- Giriş Yap -->
                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="Zaten hesabın var mı? Giriş Yap"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
