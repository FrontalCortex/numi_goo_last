<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="Geri"
        android:tint="@color/dark_text"
        app:srcCompat="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_education_logo"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hesap Oluştur"
        android:textColor="@color/dark_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Alt başlık -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Eğitim yolculuğuna başla"
        android:textColor="@color/dark_text_secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Öğrenci Kayıt: Email Step Container -->
    <LinearLayout
        android:id="@+id/emailStepContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/dark_text_secondary"
            app:startIconTint="@color/dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-posta"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Devam Et"
            android:textSize="16sp"
            app:backgroundTint="@color/dark_primary"
            app:cornerRadius="28dp" />

    </LinearLayout>

    <!-- Fragment Container (OTP kod girişi için) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/btnGoogleSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Öğretmen Kayıt Formu (Gizli, sadece öğretmen seçildiğinde görünür) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTeacherForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoogleSignIn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- İsim -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/dark_surface"
                app:hintTextColor="@color/dark_text_secondary"
                app:startIconTint="@color/dark_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ad Soyad"
                    android:inputType="textPersonName"
                    android:textColor="@color/dark_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Şifre -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/dark_surface"
                app:hintTextColor="@color/dark_text_secondary"
                app:startIconTint="@color/dark_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Şifre"
                    android:inputType="textPassword"
                    android:textColor="@color/dark_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Onay Kodu -->
            <TextView
                android:id="@+id/tvApprovalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Onay Kodu"
                android:textColor="@color/dark_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilApprovalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/dark_surface"
                app:hintTextColor="@color/dark_text_secondary"
                app:startIconTint="@color/dark_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApprovalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Onay kodu girin"
                    android:inputType="text"
                    android:textColor="@color/dark_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Öğretmen Onay Kodu İste Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRequestCode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="Kod iste"
                app:backgroundTint="@color/dark_primary"
                app:cornerRadius="24dp" />

            <!-- Kayıt Ol Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Kayıt Ol"
                android:textSize="16sp"
                app:backgroundTint="@color/dark_primary"
                app:cornerRadius="28dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Google Sign-In Butonu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogleSignIn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Google ile Kayıt Ol"
        android:textSize="16sp"
        android:textColor="#453535"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="28dp"
        app:strokeColor="@color/dark_text_secondary"
        app:strokeWidth="1dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
