<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-postanı doğrula"
            android:textColor="@color/dark_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/dark_text_secondary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="E-postanıza gelen 6 haneli kodu girin."
            android:textColor="@color/dark_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/dark_text_secondary"
            app:startIconTint="@color/dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="6 haneli kod"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/dark_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Doğrula"
            android:textSize="16sp"
            app:backgroundTint="@color/dark_primary"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Kodu tekrar gönder"
            android:textColor="@color/dark_primary"
            android:minHeight="48dp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="11sp"
            app:autoSizeTextType="uniform"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp"
            app:strokeColor="@color/dark_primary"
            app:strokeWidth="2dp" />

    </LinearLayout>
</ScrollView>
