<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101820"
    android:gravity="center">

    <!-- Kapalı/Açık sandık resmi -->

    <!-- Parlama efekti için üstte beyaz view -->
    <ImageView
        android:id="@+id/chestImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:contentDescription="chest"
        android:focusable="true"
        android:src="@drawable/closed_chest"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/goldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 altın"
        android:textColor="#FFD600"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>
    <View
        android:id="@+id/flashView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:alpha="0"
        android:visibility="gone"/>
    <Button
        android:id="@+id/claimRewardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ödülü Al"
        android:textColor="#101820"
        android:backgroundTint="#FFD600"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="48dp"
        android:visibility="gone"/>
</FrameLayout>