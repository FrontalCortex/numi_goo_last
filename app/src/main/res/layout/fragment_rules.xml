                android:layout_gravity="center"
                android:textColor="@color/lesson_header_green"
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>
            <TableLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="#222"
                android:padding="2dp">

                <TableRow>
                    <TextView
                        android:id="@+id/fiveText"
                        android:text="Eklenecek sayı"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:padding="2dp"
                        android:background="@drawable/table_cell_border"
                        android:textAlignment="center"/>
                    <TextView
                        android:text="Kardeşi"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:padding="2dp"
                        android:background="@drawable/table_cell_border"
                        android:textAlignment="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="1"
                        android:textColor="#fff"
                        android:padding="2dp"
                        android:background="@drawable/table_cell_border"
                        android:textAlignment="center"/>

                    <TextView
