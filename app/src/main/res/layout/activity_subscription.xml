                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_orange"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Ayda 10 öğretmene danış"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_orange"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Ders tekrarı var"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_orange"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Reklam yok"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_orange"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Ustalık yolu var"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Buton -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnPro"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:text="Seç"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/background_color"
                                    app:backgroundTint="@color/white"
                                    app:cornerRadius="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Premium Plan Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPremium"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#2A2A2A">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Üst Renkli Bölüm -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/lesson_header_purple">

                                <!-- Plan Adı -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Premium"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center" />
                            </FrameLayout>

                            <!-- İçerik -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <!-- Fiyat -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₺249 /ay"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_marginBottom="12dp" />

                                <!-- Açıklama -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tüm özelliklerle en üst seviye"
                                    android:textSize="14sp"
                                    android:textColor="#CCCCCC"
                                    android:layout_marginBottom="20dp" />

                                <!-- Özellikler Listesi -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="24dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_purple"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Sınırsız enerji"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_header_purple"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Ayda 30 öğretmene danış"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
