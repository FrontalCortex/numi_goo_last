<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_color"
        android:elevation="4dp"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:title="Abonelik Planları"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Plan Kartları - Horizontal ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:scrollbars="horizontal"
                android:fadeScrollbars="false"
                android:scrollbarSize="8dp"
                android:scrollbarStyle="outsideOverlay">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp">

                    <!-- Free Plan Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFree"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#2A2A2A">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Üst Renkli Bölüm -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/lesson_completed">

                                <!-- Plan Adı -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Free"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center" />
                            </FrameLayout>

                            <!-- İçerik -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <!-- Fiyat -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ücretsiz"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_marginBottom="12dp" />

                                <!-- Açıklama -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Temel özelliklerle başlayın"
                                    android:textSize="14sp"
                                    android:textColor="#CCCCCC"
                                    android:layout_marginBottom="20dp" />

                                <!-- Özellikler Listesi -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="24dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="@color/lesson_completed"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Sınırlı enerji"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✗"
                                            android:textSize="16sp"
                                            android:textColor="#666666"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Öğretmene danış yok"
                                            android:textSize="14sp"
                                            android:textColor="#999999"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✗"
                                            android:textSize="16sp"
                                            android:textColor="#666666"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Ders tekrarı yok"
                                            android:textSize="14sp"
                                            android:textColor="#999999"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="12dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✓"
                                            android:textSize="16sp"
                                            android:textColor="#666666"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Reklam var"
                                            android:textSize="14sp"
                                            android:textColor="#999999"
                                            android:layout_marginStart="12dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="✗"
                                            android:textSize="16sp"
                                            android:textColor="#666666"
                                            android:gravity="center" />

                                        <TextView
