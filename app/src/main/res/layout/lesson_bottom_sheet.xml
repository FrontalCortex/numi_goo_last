<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:padding="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- SOL YARI -->
            <TextView
                android:id="@+id/lessonTitle"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4B4B4B"
                android:layout_marginBottom="8dp"/>

            <!-- SAĞ YARI -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="20dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <LinearLayout
                    android:id="@+id/recordLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/fireAnimID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="6dp"
                    android:visibility="gone"
                    app:lottie_fileName="fire_anim.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/recordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#4B4B4B"
                    android:paddingEnd="25dp"
                    android:gravity="center_vertical"/>

                </LinearLayout>
                <!-- ÜZERİNDEKİ -->
                <TextView
                    android:id="@+id/againTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:paddingHorizontal="10dp"
                    android:text="Eğitimi tekrarla"
                    android:background="@drawable/skip_tutorial"
                    android:backgroundTint="#fff"
                    android:textAlignment="center"
                    android:textColor="#4B4B4B"
                    android:layout_gravity="end"
                    android:textSize="15sp">

                </TextView>
            </FrameLayout>

        </LinearLayout>


            <TextView
                android:id="@+id/lessonDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#4B4B4B"
                android:layout_marginBottom="16dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textAllCaps="true"
                android:text="Gözden geçir"

                android:textAlignment="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/tutorialActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:backgroundTint="@color/white"
                android:textAllCaps="true"
                android:text="Öğretici"
                android:visibility="gone"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>