                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="34dp"
                android:src="@drawable/soroban_bead"/>

            <ImageView
                android:id="@+id/rod3_bead_bottom2"
                android:layout_width="40dp"
