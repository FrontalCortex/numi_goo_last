                android:layout_height="40dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:src="@drawable/soroban_bead"/>

            <ImageView
                android:id="@+id/rod1_bead_bottom3"
                android:layout_width="40dp"
